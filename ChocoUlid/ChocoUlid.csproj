<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>ChocoUlid</Title>
    <Description>Ulid type support for HotChocolate</Description>
    <Copyright>Copyright © 2022 Paweł Furmaniak</Copyright>
    <PackageProjectUrl>https://github.com/pfurmaniak/ChocoUlid</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/pfurmaniak/ChocoUlid</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>hotchocolate;graphql;gql;ulid;</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HotChocolate.Data" Version="13.5.1" />
    <PackageReference Include="HotChocolate.Execution.Abstractions" Version="13.5.1" />
    <PackageReference Include="HotChocolate.Types" Version="13.5.1" />
    <PackageReference Include="Ulid" Version="1.3.3" />
  </ItemGroup>

</Project>
